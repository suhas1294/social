<style type="text/css">
  .comment-indent{
    margin-left: 3%;
    padding-left: 2%;
  }
  .lync{
    color: blue !important;
  }
</style>


<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= @post.body %>
    </p>

    <p>
      <strong>Comments</strong> <br>
      <div class="row comment-indent">
        <% @post.comments.each do |comment| %>
        <%= link_to User.find(comment.user_id).username, show_user_path_url(User.find(comment.user_id)), :class => "lync" %>  says: &thinsp;&thinsp;&thinsp; <%= comment.comment %> <br>
        <% end %>
      </div>
    </p>

    <%= link_to_if current_user.id == @post.user_id , 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', root_path %>

  </div>
</div>